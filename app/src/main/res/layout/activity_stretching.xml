<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".stretching">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/stretchbgcheck"
        android:alpha="0.5"/>

    <TextView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Click the button to watch full video"
        android:textSize="20dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
            <LinearLayout
                android:id="@+id/stretch1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="@drawable/shape7"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                android:weightSum="10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="7"
                    android:gravity="center"
                    android:text="Full Body Stretching" />

                <ImageView

                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:layout_weight="3"
                    android:src="@drawable/stretchingcheck1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/stretch2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="@drawable/shape7"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                android:weightSum="10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="7"
                    android:gravity="center"
                    android:text="Full Body Stretching" />

                <ImageView

                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:layout_weight="3"
                    android:src="@drawable/stretchingcheck2" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/stretch3"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="@drawable/shape7"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                android:weightSum="10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="7"
                    android:gravity="center"
                    android:text="Shoulder Stretching" />

                <ImageView

                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:layout_weight="3"
                    android:src="@drawable/stretchingcheck3" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/stretch4"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="@drawable/shape7"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                android:weightSum="10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="7"
                    android:gravity="center"
                    android:text="General Stretching" />

                <ImageView

                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:layout_weight="3"
                    android:src="@drawable/stretchingcheck4" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/stretch5"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="@drawable/shape7"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                android:weightSum="10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="7"
                    android:gravity="center"
                    android:text="General Stretching" />

                <ImageView

                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:layout_weight="3"
                    android:src="@drawable/stretchingcheck5" />

            </LinearLayout>







        </LinearLayout>

    </ScrollView>

</RelativeLayout>