<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDA4C"
    tools:context=".todo">

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/todobgimg"
        android:layout_height="match_parent"
        android:background="@color/lightyellow"
        />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="10sp"
        android:background="@drawable/shape5"
        android:backgroundTint="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:weightSum="2">


        <TextView
            android:id="@+id/reward"
            android:layout_width="300dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_weight="1"

            android:fontFamily="@font/montserrat_alternates"
            android:padding="10dp"
            android:text="Rewards: "
            android:textColor="#D2000000"
            android:textSize="20dp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/gif2"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_below="@+id/reward"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-30dp"
            android:layout_weight="1"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/congratulation" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll"
        android:id="@+id/ll3"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="weektodo"

            android:fontFamily="@font/montserrat_alternates"
            android:textSize="20dp"
            android:id="@+id/week"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/l2"
        android:layout_below="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/shape5"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:textSize="25dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:text="Trending ActivityðŸ”¥"

                    android:fontFamily="@font/montserrat_alternates"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/trending"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exercise"
                    android:textColor="@color/black"
                    android:layout_gravity="center"

                    android:fontFamily="@font/montserrat_alternates"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l2"
        android:background="@color/white"

        android:fontFamily="@font/montserrat_alternates"
        android:padding="10dp"
        android:text="Activity Summary"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv2"


        android:background="@color/lightyellow"

        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/user_list" />

</RelativeLayout>