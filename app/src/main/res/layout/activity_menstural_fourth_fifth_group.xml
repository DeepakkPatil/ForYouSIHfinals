                    android:textSize="20dp"
                    android:text="Know About Puberty"/>
                <ImageView
                    android:layout_weight="3"

                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/women_gif_3to5_5"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:backgroundTint="#a6dace"
                android:background="@drawable/shape7">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="left"
                    android:text="Period and Family"/>
                <ImageView
                    android:layout_weight="3"

                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/women_gif_3to5_6"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:backgroundTint="#f4e4d3"
                android:background="@drawable/shape7">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:layout_gravity="center"
